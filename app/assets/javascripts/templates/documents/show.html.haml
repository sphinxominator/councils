.container
  .row
    .col-md-6.col-md-offset-3{'ng-repeat': "paragraph in paragraphs | orderBy: 'id' track by $index "}
      .card.meeting-card
        .card-block.card-primary.text-center
          %a.pull-left{'ng-click': 'previousVersion(paragraph)'}
            %i.fa.fa-arrow-left

          %p.card-text(editable-text = "paragraph.description" onaftersave = 'updateParagraph(paragraph)')
            {{paragraph.id}}. {{ paragraph.description || "empty" }}
      .col-md-12{'ng-repeat': "suggestion in paragraph.suggestions | orderBy: 'id' track by $index "}
        .card.meeting-card
          .card-block.card-primary.text-center
            {{ suggestion.description }}
            %a{'ng-click': 'acceptSuggestion(suggestion)'}
              %i.fa.fa-check
            %a{'ng-click': 'deleteSuggestion(paragraph,suggestion)'}
              %i.fa.fa-minus
    .col-md-6.col-md-offset-3.text-center
      %a{'ng-click': 'createParagraph()'}
        %i.fa.fa-plus.fa-2x

%hr/