.container
  .row
    .col-sm-6.col-md-4.col-lg-3{'ng-repeat': 'meeting in meetings', 'ng-href':'#/meetings/{{meeting.id}}'}
      .card.meeting-card
        .card-block.card-primary.text-center{style:'background-color: {{ meeting.color }}'}
          %p.card-text
            {{ meeting.name }}
          %span.meeting-date
            {{ readableDate(meeting.date) }}
        %ul.list-group.list-group-flush
          %li.list-group-item
            %a.card-link{'ui-sref': 'root.councils.meetings.show({id:meeting.id})'}
              %span.div-link
              %i.fa.fa-users
              Se
          %li.list-group-item
            %a.card-link{href: 'https://docs.google.com/document/d/{{meeting.agendaDriveId}}', target: '_blank'}
              %span.div-link
              %i.fa.fa-bars
              Dagsorden
          %li.list-group-item
            %a.card-link{href: 'https://docs.google.com/document/d/{{meeting.summaryDriveId}}', target: '_blank'}
              %span.div-link
              %i.fa.fa-file-text
              Referat
    .col-md-3.text-center
      %a{'ng-click': 'open()', 'ng-if': "user.role_names.includes('admin')"}
        %i.fa.fa-plus.fa-2x
%hr/